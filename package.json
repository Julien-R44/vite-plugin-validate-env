{
  "name": "@julr/vite-plugin-validate-env",
  "version": "0.2.1",
  "packageManager": "pnpm@7.12.2",
  "description": "âœ… Vite plugin for validating your environment variables",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Julien-R44",
  "homepage": "https://github.com/Julien-R44/vite-plugin-validate-env#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/vite-plugin-validate-env.git"
  },
  "bugs": {
    "url": "https://github.com/Julien-R44/vite-plugin-validate-env/issues"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "env-var",
    "validation",
    "zod",
    "env"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "node --loader=ts-node/esm src/index.ts",
    "test": "cross-env NODE_ENV=testing ts-node bin/test.ts",
    "test:watch": "nodemon --ignore ./tests/fixtures bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^2.9.0 || ^3.0.0-0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "dependencies": {
    "@poppinss/colors": "^3.0.3",
    "@poppinss/validator-lite": "^1.0.1",
    "unconfig": "^0.3.7"
  },
  "devDependencies": {
    "@japa/assert": "^1.3.6",
    "@japa/runner": "^2.2.2",
    "@japa/spec-reporter": "^1.3.2",
    "@julr/eslint-config": "^0.3.2",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^18.11.9",
    "bumpp": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.28.0",
    "nodemon": "^2.0.20",
    "pnpm": "^7.16.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "unbuild": "^1.0.1",
    "vite": "^3.2.4",
    "zod": "^3.19.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types",
        "@babel/core",
        "@japa/core"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@julr",
    "rules": {
      "n/no-unsupported-features/es-syntax": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
